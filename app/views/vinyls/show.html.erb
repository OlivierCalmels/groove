<div class='container'></div>
  <h1><strong><%= @vinyl.name.upcase %></strong></h1>
  <h2> <%= @vinyl.artist %> </h2>

  <div class="card-product">

  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://images-na.ssl-images-amazon.com/images/I/71gNT3fImCL._SX466_.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images-na.ssl-images-amazon.com/images/I/71gNT3fImCL._SX466_.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images-na.ssl-images-amazon.com/images/I/71gNT3fImCL._SX466_.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

    <div class="card-product-infos">

       <ul>
        <li><strong class="card-label">Year:
          <br></strong><%= @vinyl.year %>  </li>
        <li><strong class="card-label">Genre:
          <br></strong><%= @vinyl.genre %>  </li>
        <li><strong class="card-label">Label: </strong>
          <br> <%= @vinyl.label %>  </li>
        <li><strong class="card-label">Quality:
          <br> </strong><%= @vinyl.quality %>  </li>
        <li><strong class="card-label">Dimension: </strong>
          <br> <%= @vinyl.dimension %>  </li>
        <li><strong class="card-label">Price per day: </strong>
          <br> <%= '%.2f' % @vinyl.price_per_day %> â‚¬</li>
       </ul>
       <%= link_to "Reserve", new_vinyl_rent_path(@vinyl), class: "btn-show" %>

    </div>

  </div>



