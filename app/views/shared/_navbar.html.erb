<div class="container-navbar">
  <div class="navbar navbar-expand-sm navbar-lewagon">

    <a class="navbar-brand" href="/">
      <%= image_tag "vinyl_green.png" %>
    </a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <ul class="navbar-nav mr-auto">

        <li class="nav-item">
          <%= link_to "All our Vinyls", vinyls_path, class: "btn btn-ghost allourvinyl" %>
        </li>
        <li class="nav-item">
          <%= link_to "Rent your Vinyl", new_vinyl_path, class: "btn btn-ghost myrent" %>
        </li>

        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <% if current_user.photo.attached? %>
              <div class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= cl_image_tag user.photo.key, alt: "photo" %>
              </div>
            <% else %>
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://avatars2.githubusercontent.com/u/71122730?s=460&u=7e0d3549a504c6c81c658567df4be61ac223c86b&v=4" />
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/dashboard">My Dashboard</a>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <!-- Si l'user est déconnecté -->
        <% else %>
          <li>
            <%= link_to "Log in", new_user_session_path, class: "btn btn-ghost" %>
          </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>
